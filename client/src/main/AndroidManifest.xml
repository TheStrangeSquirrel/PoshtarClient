<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.squirrel.postar.client">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:name="net.squirrel.poshtar.client.AppPoshtar"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:logo="@mipmap/ic_launcher"
            android:theme="@style/AppTheme"
            android:enabled="true">
        <activity
                android:name="net.squirrel.poshtar.client.activity.HelloActivity"
                android:label="@string/app_name"
                android:logo="@mipmap/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="net.squirrel.poshtar.client.activity.ProvidersActivity" android:configChanges="locale"/>
        <activity android:name="net.squirrel.poshtar.client.activity.NewTrackActivity" android:configChanges="locale"/>
        <activity android:name="net.squirrel.poshtar.client.activity.SaveTracksActivity"
                  android:configChanges="locale"/>
        <activity android:name="net.squirrel.poshtar.client.activity.SaveTrackActivity" android:configChanges="locale"/>
        <activity android:name="net.squirrel.poshtar.client.activity.SettingsActivity" android:configChanges="locale">
        </activity>
        <activity android:name="net.squirrel.poshtar.client.activity.AboutActivity">
        </activity>
    </application>

</manifest>
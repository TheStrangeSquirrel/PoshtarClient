<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
        tools:context="${relativePackage}.${activityClass}"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="@string/add_tracking"
            android:id="@+id/newTrack"
            android:layout_marginTop="107dp" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    <Button android:layout_width="200dp" android:layout_height="100dp" android:text="@string/save_tracking"
            android:id="@+id/savedTrack"
            android:layout_centerVertical="true" android:layout_alignRight="@+id/newTrack"
            android:layout_alignEnd="@+id/newTrack"/>
</RelativeLayout>
